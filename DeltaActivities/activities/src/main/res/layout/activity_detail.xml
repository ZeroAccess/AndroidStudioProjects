<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#87b553"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delta.activities.FirstActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/activityName"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Detail Activity"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:background="#1da38c"
        android:id="@+id/spinnerSelection"
        android:layout_centerInParent="true"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/actions">
        </Spinner>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:id="@+id/returnToSecondActivity"
            android:background="#b24261"
            android:text="Return  Selection"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"  />
        <Button
            android:id="@+id/performImplicit"
            android:background="#1DA38C"
            android:text="Perform Selection"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:padding="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"  />
    </LinearLayout>

</RelativeLayout>
